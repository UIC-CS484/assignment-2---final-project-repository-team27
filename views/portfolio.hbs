<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<body>

  <div id="page-content">
    <h1>{{fname}} {{lname}}</h1>
    <ul>
          <li style="display:inline">
          <a href="http://twitter.com/{{twitter}}" class="fa fa-twitter"></a></li>

          <li style="display:inline">
          <a href="http://github.com/{{github}}" class="fa fa-github"></a></li>
          <li style="display:inline">
          <a href="http://linkedin.com/in/{{linkedin}}" class="fa fa-linkedin"></a></li>
  </ul>

    <div class="bbox" id="about">
      <h3>About Me</h3>
      <p>
        {{tagline}}i
      </p>
      <ul class="no-style">
        <li style="list-style-type: none;">
          <i class="fa fa-envelope"></i><b>Email</b> {{email}}
        </li>
        <li style="list-style-type: none;">
          <i class="fa fa-phone"></i><b>Phone</b> {{phone}}
        </li>
        <li style="list-style-type: none;">
          <i class="fa fa-map-marker"></i><b>Address</b> {{location}}
        </li>
      </ul>

    </div>
    <div class="bbox" id="education">
      <h3>Education</h3>

      <ul class="no-style">
        {{#each educations}}
        <li style="list-style-type: none;">
          <div>
          <span class="dot"></span><p style="display:inline;padding-left:15px;" class="bigp">{{this.degree}} in {{this.major}} from {{this.university}}</p>
          <p>{{this.start_date}} - {{this.end_date}}</p>
          <p>{{this.description}}<p>
          <div>
        </li>
        {{/each}}
      </ul>


    </div>
    <div class="bbox" id="skills">
      <h3>Skills</h3>
      <ul class="no-style">
        {{#each skills}}
        <li style="list-style-type: none;padding-bottom:10px;">
        <p style="font-size:medium;display:inline;padding-right:10px;" >{{this.name}}</p>
        <div class="progress" style="margin-top:5px;">
          <div class="progress-bar bg-success" style="width:{{this.score}}%;height:20px;" value="{{this.score}}" max="10">
        {{this.score}}% </div>
        </div>
        </li>
        {{/each}}
      </ul>

    </div>
    
    <div class="bbox"id="experience">
      <h3>Experience</h3>
      <ul class="no-style">
        {{#each experiences}}
        <li style="list-style-type: none;">
          <div>
          <span class="dot"></span><p style="display:inline;padding-left:15px;" class="bigp">{{this.role}} at {{this.employer}}</p>
          <p>{{this.start_date}} - {{this.end_date}} at {{this.location}}</p>
          <p>{{this.description}}<p>
          <div>
        </li>
        {{/each}}
      </ul>


    </div>
    <div class="bbox" id="github">
      <h3>GitHub Activity Chart</h3>
      <div id="chart-container">
        <canvas id="myChart" gid={{github}} width="400" height="400"></canvas>
      </div>
      <script type="text/javascript">
      // TODO: UnComment this!!!
        render_chart();
      </script>

    </div>
    <div class="bbox" id="projects">
      <h3>GitHub Projects</h3>
      <ul class="no-style">
        {{#each github_repos}}
        <li style="list-style-type: none;">
          <div>
          <p style="display:inline;" class="bigp"><a href="{{this.html_url}}">{{this.name}}</a></p>
          <p>Created at {{this.created_at}} Forks <b>{{this.forks_count}}</b> Stars <b>{{this.stargazers_count}}</b><p>
          <p>{{this.description}}</p>
          <div>
        </li>
        {{/each}}
      </ul>
    </div>
    <div class="bbox" id="twitter" style="max-height:500px">
      {{{twitter_embedding}}}
    </div>

  </div>

<footer class="mt-auto">
    <p>Project part of CS484 by Prof. Chris Fulton at University of Illinois at Chicago</p>
  </footer>
</body>
