<body class="d-flex h-100 text-white bg-dark">
<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
<h2>Add Experience</h2>


{{#if error}}
<span class="help-block alert-danger has-warning">{{error}}</span>
{{/if}}

<form id='add-experience-form' class="form-signin needs-validation" action="/user/update-experience/{{xid}}" method='POST' >
    <div class="form-group">
    <label for="employer">Employer name</label><br>
    <input type="text" class="form-control" value="{{employer}}" id="employer" name="employer" required><br>
    <span class="help-block alert-danger has-warning">{{employer_error}}</span>
  </div>
  <div class="form-group">
    <label for="role">Role</label><br>
    <input type="text" class="form-control" value="{{role}}" id="role" name="role" required><br>
    <span class="help-block alert-danger has-warning">{{role_error}}</span>
  </div>
  <div class="form-group">
    <label for="description">Description</label><br>
    <input type="text" class="form-control" value="{{description}}" id="description" name="description"><br>
    <span class="help-block alert-danger has-warning">{{description_error}}</span>
  </div>
  <div class="form-group">
    <label for="location">Location</label><br>
    <input type="text" class="form-control" value="{{location}}" id="location" name="location"><br>
    <span class="help-block alert-danger has-warning">{{location_error}}</span>
  </div>
  
  <div class="form-group">
    <label for="start_date">Start year</label><br>
    <input type="number" class="form-control" value="{{start_date}}" required id="start_date" name="start_date">
    <span class="help-block alert-danger has-warning">{{start_date_error}}</span>
  </div>
  <div class="form-group">
    <label for="end_date">End year</label><br>
    <input type="number" class="form-control" value="{{end_date}}" id="end_date" name="end_date">
    <span class="help-block alert-danger has-warning">{{end_date_error}}</span>
  </div>
  <button type="submit" class="btn btn-dark">Submit</button>
  <a href="/user/update-experience/"><button type="button" class="btn btn-dark">Cancel</button></a>
</form>

</div>
</body>
